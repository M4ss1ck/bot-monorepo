// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  permaban Boolean   @default(false)
  date     DateTime
  messages Message[]
}

model Message {
  id     Int    @id @default(autoincrement())
  text   String
  chatId String
  chat   Chat   @relation(fields: [chatId], references: [tgId])
  userId String
  sender User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Chat {
  id       Int       @id @default(autoincrement())
  tgId     String    @unique
  antibot  Boolean   @default(false)
  messages Message[]
}
